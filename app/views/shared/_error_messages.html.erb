<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulário contém <%= pluralize(@user.errors.count, "erro") %>:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="error_li"> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
