
<div class="row">
  <div class="col-md-offset-1">
<div class="row">
  <% @book_tables.each do |book| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <div class="pull-right">
      <p> <font size="1"><var><%= book.user.email %></var></font></p>
    </div>
      <div class="caption">
        <h3><%= book.title %></h3>
        <p><%= book.author %></p>
        <p><a href="<%='/exchanges/new/'+ book.id.to_s %>" class="btn btn-primary" role="button"><%= t('views.application.book_box.exchange') %></a> </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="pagination">
			<%= will_paginate @book_tables, renderer: BootstrapPagination::Rails %>
</div>
