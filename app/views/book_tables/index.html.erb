<h1><%= t('views.books.grid.page_title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book_table.title') %></th>
      <th><%= t('activerecord.attributes.book_table.author') %></th>
      <th><%= t('activerecord.attributes.book_table.category_id') %></th>

      <th class="last">
        <%= link_to(dashboard_book_new_path, class: "btn btn-default") do %>
          <i class="fa fa-file-o"></i> <%= t('views.books.actions.new') %>
        <% end %>
    </tr>
  </thead>

  <tbody>
    <!-- Arrumar isso aqui pra trazer só os do usuário -->
    <% if !@book_tables.nil? %>
    <% @book_tables.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.category.description %></td>

        <td class="last">
    			<%= link_to(dashboard_book_edit_path(book), class: "btn btn-warning") do %>
    				<i class="fa fa-edit"></i> <%= t('views.books.actions.edit') %>
    			<% end %>

			    <%= link_to(dashboard_book_delete_path(book), class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' }) do %>
				      <i class="fa fa-remove"></i> <%= t('views.books.actions.remove') %>
			    <% end %>
		    </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
